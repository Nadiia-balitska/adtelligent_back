generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Article {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  guid      String   @unique
  title     String
  link      String
  summary   String?
  image     String?
  content   String?
  pubDate   DateTime?
  createdAt DateTime @default(now())
}
