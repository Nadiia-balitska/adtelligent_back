generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

enum AdType {
  BANNER
  VIDEO
}

model Feed {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String   @unique
  title     String?
  items     Json
  fetchedAt DateTime @default(now())
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}

model LineItem {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  size          String
  minCPM        Float
  maxCPM        Float
  geo           String
  adType        AdType
  frequencyCap  Int
  creativePath  String
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())

  impressions   Impression[]
}

model Impression {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  lineItemId  String   @db.ObjectId
  servedAt    DateTime @default(now())

  lineItem    LineItem @relation(fields: [lineItemId], references: [id])

  @@index([userId, lineItemId])
  @@index([servedAt])
}

model ImpressionCounter {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  userId     String
  lineItemId String  @db.ObjectId
  count      Int     @default(0)

  @@unique([userId, lineItemId])
}

model Analytics {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  event      String
  timestamp  DateTime
  page       String?
  userAgent  String?
  auctionId  String?
  adUnitCode String?
  bidder     String?
  cpm        Float?
  creativeId String?
  size       String?
  currency   String?
}