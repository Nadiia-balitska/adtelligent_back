generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Feed {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String   @unique
  title     String?
  items     Json
  fetchedAt DateTime @default(now())
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}
